
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="http://iiap.org.pe/favicon.ico" type="image/x-icon">


    <style type="text/css">
        * {
            box-sizing: border-box;
        }

        html {
            background: #98d684;
        }

        body {
            background: #98d684;
            margin: 0;
            padding: 0;
            font-family: 'Lato', sans-serif;
        }

        .login-form-wrap {
            background: -webkit-radial-gradient(center ellipse, #5170ad 0%, #355493 100%);
            background: radial-gradient(ellipse at center, #47cf73 0%, #439335 100%);
            border: 1px solid #42a045;
            box-shadow: 0 1px #19a948 inset, 0 0 10px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            width: 360px;
            height: 734px;
            margin: 60px auto;
            padding: 30px 30px 0 30px;
            text-align: center;
        }

            .login-form-wrap h1 {
                margin: 0 0 20px 0;
                padding: 0;
                font-size: 26px;
                color: #fff;
            }

            .login-form-wrap h5 {
                margin-top: 40px;
            }

                .login-form-wrap h5 > a {
                    font-size: 14px;
                    color: #fff;
                    text-decoration: none;
                    font-weight: 400;
                }

        .login-form input[type="email"], .login-form input[type="text"], .login-form input[type="password"] {
            width: 100%;
            border: 1px solid #24921f;
            padding: 12px 20px;
            font-weight: 400;
            font-family: 'Lato', sans-serif;
            cursor: text;
        }

        .login-form input[type="email"], .login-form input[type="text"] {
            border-radius: 8px;
            padding-bottom: 13px;
        }

        .login-form input[type="password"] {
            border-top: none;
            border-radius: 8px;
            box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.23) inset, 0 1px 2px rgba(255, 255, 255, 0.1);
        }

        .login-form #btnSave {
            font-family: 'Lato', sans-serif;
            font-weight: 400;
            background: #ec8021;
            display: block;
            margin: 5px auto 0 auto;
            width: 100%;
            border: none;
            border-radius: 3px;
            padding: 8px;
            font-size: 17px;
            color: #fffcfc;
            font-weight: 700;
            cursor: pointer;
        }

        .login-form #btnSave {
            background: #e66f07;
        }

        .login-form #btnSave {
            padding-top: 9px;
            padding-bottom: 7px;
            background: #e66f07;
        }

        .form-group label {
            font-weight: 600;
            font-size: 14px;
            color: #353a3f;
            margin-bottom: 5px;
            display: block;
        }

        .form-group {
            text-align: left;
        }

            .form-group input {
                border-radius: 8px;
                padding-bottom: 13px;
                margin-bottom: 5px;
            }

            .form-group.required label:after {
                padding-left: 5px;
                color: #cb2431;
                content: "*";
            }

        h2 {
            color: #fffcfc;
        }

        span {
            min-height: 17px;
            color: #353a3f;
            font-size: 12px;
        }

        .form-group input:focus {
            border-color: #2188ff;
            outline: none;
        }

        .alert-danger {
            color: #a94442;
            background-color: #f2dede;
            border-color: #ebccd1;
        }

        .alert-dismissable, .alert-dismissible {
            padding-right: 35px;
        }

        .alert-dismissable, .alert-dismissible {
            padding-right: 35px;
        }

        .alert {
            padding: 5px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
            font-size: 13px;
        }

        .text-center {
            text-align: center;
        }

        .alert-dismissable .close, .alert-dismissible .close {
            position: relative;
            top: -2px;
            right: -21px;
            color: inherit;
        }

        .has-error label {
            color: #a94442;
        }

        .has-error input {
            border-color: #a94442;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        }
    </style>

</head>
<body cz-shortcut-listen="true">
    <section class="login-form-wrap">
        <img class="pull-right" src="http://iiap.org.pe/visor/img/logoiiap.png" alt="DSpace logo" style="width: 50px;">

        <form class="login-form" autocomplete="off">
            <h1>
                Crea tu cuenta
            </h1>
            <div id="msg"></div>
            <div class="form-group required">
                <label>Nombre </label>
                <input type="text" id="txtNombre" name="txtNombre" style="margin-top: 0px;" required>
            </div>
            <div class="form-group required">
                <label>Apellido Paterno</label>
                <input type="text" id="txtApePa" name="txtApePa" required>
            </div>
            <div class="form-group required">
                <label>Apellido Materno</label>
                <input type="text" id="txtApeMa" name="txtApeMa" required>
            </div>
            <div class="form-group">
                <label>Institución</label>
                <input type="text" id="txtInst" name="txtInst">
            </div>
            <div class="form-group required">
                <label>Correo</label>
                <input type="text" id="txtEmail" name="txtEmail" autocomplete="off" required>
            </div>
            <div class="form-group required">
                <label>Contraseña</label>
                <input type="password" id="txtPassword" name="txtPassword" required>
                <span>Asegúrese de que tenga al menos 15 caracteres O al menos 8 caracteres, incluido un número y una letra minúscula.</span>
            </div>
            <button id="btnSave" type="button" value="">Crear Cuenta</button>
        </form>
    </section>

    <script>

        function SaveAccount() {
            if (Validate()) {
                let cNomb = document.getElementById("txtNombre").value;
                let cApePa = document.getElementById("txtApePa").value;
                let cApeMa = document.getElementById("txtApeMa").value;
                let cInst = document.getElementById("txtInst").value;
                let cEmail = document.getElementById("txtEmail").value;
                let cPass = document.getElementById("txtPassword").value;

                let jsonData = { cNombres: cNomb, cApellidoPa: cApePa, cApellidoMa: cApeMa, cInstitucion: cInst, cEmail: cEmail, cContrasena: cPass };
                let formattedJsonData = JSON.stringify(jsonData);

                let req = new XMLHttpRequest();
                req.open('POST', '@Url.Action("SaveAccount", "Join")', true);
                req.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');

                req.onload = function () {
                    if (req.status >= 200 && req.status < 400) {
                        info = JSON.parse(req.responseText);
                        console.log(info);
                    } else {
                        console.log('We encountered an error!');
                    }
                }

                req.send(formattedJsonData);
            } else {
                document.querySelector(".login-form .has-error input").focus();
            }
        }


        document.getElementById('btnSave').addEventListener('click', function () {
                SaveAccount();
        });

        function ShowError(msg) {

            document.getElementById("msg").innerHTML =
                `<div class="alert alert-danger alert-dismissible text-center" role="alert" style="margin-bottom: 10px;">
                    <strong>Error! </strong>${msg}
                </div>`;
        }

        function HideError() {
            document.getElementById("msg").innerHTML = "";
        }

        function ExistError() {
            if (document.querySelector(".login-form .has-error") == null) {
                return false;
            }
            return true;
        }


        function RequiredError() {
            document.querySelectorAll(".login-form .required").forEach(e => { if (e.querySelector("input").value == "") { e.classList.add("has-error") } else { e.classList.remove("has-error") } });
        }

        function ValidateRequiredOK() {
            RequiredError();
            let existError = ExistError();

            if (existError) {
                ShowError("Es necesario completar los campos obligatorios");
            }

            return !existError;
        }

        function Validate() {

            document.querySelectorAll(".login-form .required input").forEach(i => {
                i.addEventListener('keyup', function (e) {
                    RequiredError();
                });
            });

            //Validate Required
            if (!ValidateRequiredOK()) return false;

            return true;
        }



    </script>

</body>
</html>