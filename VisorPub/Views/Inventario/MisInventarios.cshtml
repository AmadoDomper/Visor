    function CrearTabla(rows) {
        let table = `
                                <thead>
                                    <th> Eliminar </th>
                                    <th> Editar </th>
                                    <th> Departamento </th>
                                    <th> Registrador </th>
                                    <th> Longitud </th>
                                    <th> Latitud </th>
                                    <th> Código Muestra </th>
                                    <th> Altitud </th>
                                    <th> Precisión </th>
                                    <th> Tipo de Vegetación </th>
