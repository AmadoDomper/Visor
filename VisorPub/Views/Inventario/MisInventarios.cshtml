                                        <td>${rows[i].cRegistrador}</td>
                                        <td>${rows[i].cLongitud}</td>
                                        <td>${rows[i].cLatitud}</td>
                                        <td>${rows[i].cCodigoMuestra}</td>
                                        <td>${rows[i].cAltitud}</td>
