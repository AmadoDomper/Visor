<!DOCTYPE html>
@using ESql;
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Mapa de Publicaciones IIAP</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Public/css/bootstrap.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Public/css/main.css" rel="stylesheet">

    <!-- OpenLayer CSS-->
    <link rel="stylesheet" href="~/Public/css/ol.css" type="text/css" />
    <link rel="stylesheet" href="~/Public/css/ol3-layerswitcher.css" type="text/css" />
    <link rel="stylesheet" href="~/Public/css/ol3-popup.css" type="text/css" />
    <link rel="stylesheet" href="~/Public/css/ol3gm.css" type="text/css" />

    <!--SMOKE VALIDATION CSS-->
    <link rel="stylesheet" href="~/Public/css/smoke.css" type="text/css" />
</head>
@{
    Usuario oUsuario = new Usuario();
    oUsuario = (Usuario)Session["Datos"];
}
<body>
    <!--js archivos-->
    <!-- jQuery -->
    <script src="~/Public/js/jquery.js"></script>

    <!--Personal Utils-->
    <script src="~/Public/js/utils.js"></script>
    <script src="~/Public/js/conexion-1.0.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Public/js/bootstrap.js"></script>
    <!--OpenLayer JS-->
    <script src="~/Public/js/ol.js"></script>
    <script src="~/Public/js/ol3-layerswitcher.js"></script>
    <script src="~/Public/js/ol3-popup.js"></script>


    <!--SMOKE VALIDATION JS-->
    <script src="~/Public/js/smoke.js"></script>

    <!--fin js archivos-->

    <script type="text/javascript">
        //pasamos el modelo a javascript
        var Model = @Html.Raw(Json.Encode(@Model));
    </script>


    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">

                <a class="navbar-brand" rel="home" href="#" title="Buy Sell Rent Everyting">
                    <img style="max-width: 100px; height: 40px; margin-top: -7px;"
                        src="~/Public/img/logo.png">
                </a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Inicio")">Mapa de Publicaciones</a>
            </div>



            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Acerca", "Inicio")">Acerca del proyecto</a>
                    </li>
                    <li>
                        <a href="http://iiap.org.pe/wfr_Sugerencia.aspx">Contacto</a>
                    </li>
                </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">

                        @if (oUsuario == null)
                        {
                             <a href="@Url.Action("Login", "Login")" role="button">Inicia Sesión <span class="caret"></span></a>
                        }
                        else
                        {
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@oUsuario.UserName <span class="caret"></span></a>
                           
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("Registrar", "Publicacion")">Registrar publicación</a></li>
                                <li><a href="@Url.Action("Listar", "Publicacion")">Mantener publicaciones</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("CerrarSession", "Login")">Salir</a></li>
                            </ul>
                        }


                    </li>
                </ul>


            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container card">
        @RenderBody()
        <hr>
        <!-- Footer -->


    </div>

    <div class="container">
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p class="right">Instituto de Investigaciones de la Amazonía Peruana</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
    <!-- /.container -->
</body>
</html>
